task Task_Main()
{
	TBackground();
	wait(180);
	TEndingImage(imgEDMarisa[0], 120);
	//  BGM
	PlayMusic( 17, 120, 60 );
	
	// ��b����
	StartTalk();
	wait(120);

	FuncTalk();
	wait(15);

	//���̃V�[����
	FinishTalk(true);
	SetForbidPlayerShot(true);
	SetForbidPlayerSpell(true);
	
	//  BGM
	PlayMusic( -1, 0, 60 );
	
	wait(180);
	CloseStgScene();
}

// ��b����
function FuncTalk()
{
	let COL0 = [160, 160, 160];
	let COL1 = [108, 255, 255];
	let COL2 = [255, 255, 108];
	
	// �I�u�W�F�N�g�쐬
	let cutinDescri = CreateDescriptiveObject();
	wait(15);
	
	let talkID = 0;
	loop
	{
		let talkType = FuncTalkSingle(talkID);
		if (talkType == 0) { break; }
		talkID = max(0, talkID+WaitNext());
	}

	// ��b�����P���i�����߂����o����悤�Ɂj
	function FuncTalkSingle(talkID)
	{
		let talk_type = 1;
		alternative(talkID)
		case(0)
		{
SetTalkEx(cutinDescri, gettxt("0X_Talk02b.dnh.1",1), COL1);
		}
		case(1)
		{
SetTalkEx(cutinDescri, gettxt("0X_Talk02b.dnh.2",1), COL0);
		}
		case(2)
		{
SetTalkEx(cutinDescri, gettxt("0X_Talk02b.dnh.3",1), COL0);
		}
		case(3)
		{
SetTalkEx(cutinDescri, gettxt("0X_Talk02b.dnh.4",1), COL0);
		}
		case(4)
		{
SetTalkEx(cutinDescri, gettxt("0X_Talk02b.dnh.5",1), COL1);
		}
		case(5)
		{
SetTalkEx(cutinDescri, gettxt("0X_Talk02b.dnh.6",1), COL1);
		}
		case(6)
		{
SetTalkEx(cutinDescri, gettxt("0X_Talk02b.dnh.7",1), COL1);
		}
		case(7)
		{
			TEndingImage(imgEDMarisa[1], 30);
SetTalkEx(cutinDescri, gettxt("0X_Talk02b.dnh.8",1), COL2);
		}
		case(8)
		{
SetTalkEx(cutinDescri, gettxt("0X_Talk02b.dnh.9",1), COL1);
		}
		case(9)
		{
SetTalkEx(cutinDescri, gettxt("0X_Talk02b.dnh.10",1), COL0);
		}
		case(10)
		{
SetTalkEx(cutinDescri, gettxt("0X_Talk02b.dnh.11",1), COL0);
		}
		case(11)
		{
SetTalkEx(cutinDescri, gettxt("0X_Talk02b.dnh.12",1), COL0);
		}
		others
		{
			return(0);
		}
		return(talk_type);
	}
}









