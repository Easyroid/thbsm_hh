}

// ��b����
function FuncTalk()
{
	// �I�u�W�F�N�g�쐬
	let cutinBoss1   = CreateTalkObject(BOSS_ID_MOKOU, true);
	let cutinPlayer1 = CreateTalkObject(BOSS_ID_MARISA, false);
	
	// ����ݒ�
	ChangeTalkTexture(cutinPlayer1, I_NORMAL);
	SetImageFoward(cutinBoss1, true);
	BossScene_SetNameVisible(objScene, true);	//�{�X�l�[���\�����
	wait(15);
	
	let talkID = 0;
	loop
	{
		let talkType = FuncTalkSingle(talkID);
		if (talkType == 0) { break; }
		talkID = max(0, talkID+WaitNext());
	}

	// ��b�����P���i�����߂����o����悤�Ɂj
	function FuncTalkSingle(talkID)
	{
		let talk_type = 1;
		alternative(talkID)
		case(0)
		{
			ChangeTalkTexture(cutinBoss1, I_SMILE);
SetTalkEx(cutinBoss1, gettxt("04a_Talk02b.dnh.1",GetAreaCommonData("Config", "AccKey", 0)));
		}
		case(1)
		{
			ChangeTalkTexture(cutinPlayer1, I_NORMAL);
SetTalkEx(cutinPlayer1, gettxt("04a_Talk02b.dnh.2",GetAreaCommonData("Config", "AccKey", 0)));
		}
		case(2)
		{
			ChangeTalkTexture(cutinBoss1, I_NORMAL);
SetTalkEx(cutinBoss1, gettxt("04a_Talk02b.dnh.3",GetAreaCommonData("Config", "AccKey", 0)));
		}
		case(3)
		{
			ChangeTalkTexture(cutinBoss1, I_NOTICE);
SetTalkEx(cutinBoss1, gettxt("04a_Talk02b.dnh.4",GetAreaCommonData("Config", "AccKey", 0)));
		}
		case(4)
		{
			// �{�X�ގ�
			AwayBoss();
			SetImageVisible(cutinBoss1, false);
			
			ChangeTalkTexture(cutinPlayer1, I_NOTICE);
SetTalkEx(cutinPlayer1, gettxt("04a_Talk02b.dnh.5",GetAreaCommonData("Config", "AccKey", 0)));
		}
		others
		{
			return(0);
		}
		return(talk_type);
	}
}

// �o�ꃂ�[�V����
task AwayBoss()
{
	if (Obj_GetValueD(objEnemy, "BOSS_MOVED", false)) { return; }
	Obj_SetValue(objEnemy, "BOSS_MOVED", true);

	// �o�ꃂ�[�V����
	ObjMove_SetDestAtWeightSpeedUp(objEnemy, CenX, 240, 30, 0.1, 0.1, 8);
	ascent(i in 0 .. 75)
	{
		let tmp = sin((i+1)/75*90);
		let tmp_s = 1 - tmp/2;
		let tmp_c = 255 - tmp*255;
		let tmp_a = min(255, (1-tmp)*1024);
		ObjRender_SetScaleXYZ(GetBossImageID(objEnemy), tmp_s, tmp_s, tmp_s);
		ObjRender_SetColor(GetBossImageID(objEnemy), tmp_c, tmp_c, tmp_c);
		ObjRender_SetAlpha(GetBossImageID(objEnemy), tmp_a);
		yield;
	}
	Obj_SetVisible(GetBossImageID(objEnemy), false);
	while(!FINISH_TALK) { yield; }
	Boss_Finalize(objEnemy, false, false);
}
