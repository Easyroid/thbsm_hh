task Task_Main()
{
	// ���@�w���Z�b�g
	BossEffect_ResetMagicCircle();

	// ��b����
	StartTalk();

	wait(30);

	//��b����
	FuncTalk();
	
	//���̃V�[����
	FinishTalk(true);

