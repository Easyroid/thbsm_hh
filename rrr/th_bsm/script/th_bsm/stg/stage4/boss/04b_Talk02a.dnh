// ���C���^�X�N
task Task_Main()
{
	// ���@�w���Z�b�g
	BossEffect_ResetMagicCircle();

	// ��b����
	StartTalk();

	wait(120);

	//��b����
	FuncTalk();
	
	//���̃V�[����
	FinishTalk(true);
	Boss_Finalize(objEnemy, false, false);
}

// ��b����
function FuncTalk()
{
	// �I�u�W�F�N�g�쐬
	let cutinBoss1   = CreateTalkObject(BOSS_ID_ICHIYOU, true);
	let cutinPlayer1 = CreateTalkObject(BOSS_ID_REIMU, false);
	
	// ����ݒ�
	ChangeTalkTexture(cutinBoss1, I_BORO2);
	SetImageFoward(cutinPlayer1, true);
	wait(15);
	
	let talkID = 0;
	loop
	{
		let talkType = FuncTalkSingle(talkID);
		if (talkType == 0) { break; }
		talkID = max(0, talkID+WaitNext());
	}

	// ��b�����P���i�����߂����o����悤�Ɂj
	function FuncTalkSingle(talkID)
	{
		let talk_type = 1;
		alternative(talkID)
		case(0)
		{
			ChangeTalkTexture(cutinPlayer1, I_WORRY);
SetTalkEx(cutinPlayer1, gettxt("04b_Talk02a.dnh.1",1));
		}
		case(1)
		{
			ChangeTalkTexture(cutinBoss1, I_BORO2);
SetTalkEx(cutinBoss1, gettxt("04b_Talk02a.dnh.2",1));
		}
		case(2)
		{
			ChangeTalkTexture(cutinPlayer1, I_UPSET);
SetTalkEx(cutinPlayer1, gettxt("04b_Talk02a.dnh.3",1));
		}
		case(3)
		{
			ChangeTalkTexture(cutinBoss1, I_BORO1);
SetTalkEx(cutinBoss1, gettxt("04b_Talk02a.dnh.4",1));
		}
		case(4)
		{
			ChangeTalkTexture(cutinPlayer1, I_UPSET_SMILE);
SetTalkEx(cutinPlayer1, gettxt("04b_Talk02a.dnh.5",1));
		}
		case(5)
		{
			ChangeTalkTexture(cutinBoss1, I_BORO1);
SetTalkEx(cutinBoss1, gettxt("04b_Talk02a.dnh.6",1));
		}
		others
		{
			return(0);
		}
		return(talk_type);
	}
}
